<resources>

    <!--  Button  -->
    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="fontFamily">@font/nunito_semibold</item>
        <item name="android:paddingLeft">@dimen/margin_medium</item>
        <item name="android:paddingRight">@dimen/margin_medium</item>
    </style>

    <style name="Button.Secondary">
        <item name="android:background">@drawable/bg_secondary_button</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Button.Light">
        <item name="android:background">@drawable/bg_light_button</item>
        <item name="android:textColor">@color/orange</item>
    </style>


    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textColorHint">@color/dark_grey</item>
        <item name="colorControlNormal">@android:color/transparent</item>
        <item name="android:background">@drawable/bg_text_input</item>
    </style>


    <style name="HintText" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">@dimen/hint_text_size</item>
    </style>

    <style name="ErrorText" parent="TextAppearance.Design.Error">
        <item name="android:textColor">#ff0000</item>
        <item name="android:textSize">@dimen/error_text_size</item>
    </style>

    <!--  TextView  -->
    <style name="TextField" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextField.Small">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="TextField.Medium">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="TextField.Big">
        <item name="android:textSize">@dimen/text_size_big</item>
    </style>

    <style name="TextField.Header" parent="TextField.Big">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="fontFamily">@font/nunito_bold</item>
    </style>

    <style name="TextField.Header.Black" parent="TextField.Header">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextField.Popup">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">@dimen/popup_text_size</item>
    </style>

    <style name="TextField.WeatherStatuses" parent="TextField.Big">
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="TextField.WeatherItemDegree" parent="TextField.Big">
        <item name="android:textSize">@dimen/text_size_huge</item>
        <item name="android:fontFamily">@font/nunito_extrabold</item>
        <item name="fontFamily">@font/nunito_extrabold</item>
    </style>

    <style name="TextField.WeatherItemCity" parent="TextField.Big">
        <item name="android:textSize">@dimen/text_size_bigger</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="fontFamily">@font/nunito_bold</item>
    </style>

    <style name="TextField.WeatherItemDate" parent="TextField.Big">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="fontFamily">@font/nunito_bold</item>
    </style>

    <style name="TextField.DegreeMainScreen" parent="TextField.WeatherStatuses">
        <item name="android:textColor">@color/light_blue</item>
        <item name="android:textSize">@dimen/text_size_main_degree</item>
    </style>


    <!--  EDITTEXT  -->
    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="EditText.PopupInput">
        <item name="android:textSize">@dimen/popup_text_size</item>
    </style>

</resources>
